<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:background="?attr/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="@android:color/white"/>
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="24dp"
                android:src="@mipmap/ic_launcher"
                android:contentDescription="App icon"/>
            <TextView
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#ff00bfa5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="FaceShot-BuildingBlock"
                android:textAlignment="center"/>
            <TextView
                android:textSize="14sp"
                android:textColor="#b0b0b0"
                android:id="@+id/tvVersion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Version 1.0.0"/>
            <TextView
                android:textSize="16sp"
                android:textStyle="italic"
                android:textColor="#ff00e5ff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Brought to you by AppSauce"/>
            <View
                android:background="#40ffffff"
                android:layout_width="200dp"
                android:layout_height="1dp"
                android:layout_marginVertical="24dp"/>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/card_background"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#ff00bfa5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="What is FaceShot-BuildingBlock?"/>
                    <TextView
                        android:textSize="14sp"
                        android:textColor="#e0e0e0"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="FaceShot-BuildingBlock is a versatile mobile tool designed for your day-to-day activities. Create transparent floating notes, edit photos and videos, record audio, and more - all from one app.\10\10Whether you&apos;re copying information between apps, preparing media content, or just organizing your thoughts, FaceShot-BuildingBlock has you covered."
                        android:lineSpacingExtra="4dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/card_background"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:strokeColor="#ff00bfa5"
                app:strokeWidth="1dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#ff00e5ff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Works with FaceShot-ChopShop"/>
                    <TextView
                        android:textSize="14sp"
                        android:textColor="#e0e0e0"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="For an enhanced experience, use FaceShot-BuildingBlock alongside the FaceShot-ChopShop website and tools. This app helps you efficiently prepare and organize media before submitting it to FaceShot-ChopShop&apos;s powerful editing tools.\10\10This integration is completely optional - the app works perfectly fine on its own for everyday use!"
                        android:lineSpacingExtra="4dp"/>
                    <com.google.android.material.button.MaterialButton
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/btnVisitChopShop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Visit FaceShot-ChopShop"
                        app:backgroundTint="@color/accent_teal"
                        app:cornerRadius="20dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/card_background"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#ff00bfa5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Key Features"/>
                    <TextView
                        android:textSize="14sp"
                        android:textColor="#e0e0e0"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="• Transparent floating notepad overlay\10• Photo editor with crop, rotate, flip\10• Video editor with trim, speed control, crop\10• Voice recorder and audio editor\10• Secure notes with PIN protection\10• Dark professional theme"
                        android:lineSpacingExtra="6dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <TextView
                android:textSize="12sp"
                android:textColor="#808080"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="24dp"
                android:text="© 2024 AppSauce. All rights reserved."/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
