<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:background="?attr/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="@android:color/white"/>
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">
        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="@color/card_background"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">
                <FrameLayout
                    android:id="@+id/editorContainer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="Image to edit"
                        android:scaleType="fitCenter" />
                    <com.n0tez.app.photoeditor.DrawingOverlayView
                        android:id="@+id/drawingView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </FrameLayout>
            </com.google.android.material.card.MaterialCardView>
            <TextView
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#ff00ffff"
                android:layout_gravity="center_horizontal"
                android:id="@+id/tvImageInfo"
                android:background="?attr/selectableItemBackground"
                android:padding="8dp"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="No image loaded"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSelectImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Select Image"
                app:backgroundTint="@color/accent_teal"
                app:cornerRadius="12dp"
                app:icon="@drawable/ic_add"/>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="@color/card_background"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#ff00bfa5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="Editing Tools"/>
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp">
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnAdjust"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="4dp"
                            android:text="Adjust"
                            app:cornerRadius="12dp"
                            app:icon="@drawable/ic_opacity"
                            app:iconGravity="textStart"
                            app:iconPadding="8dp"
                            app:iconSize="24dp"
                            app:strokeColor="#ff00e5ff"
                            style="@style/Widget.Material3.Button.OutlinedButton" />
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnFilters"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="4dp"
                            android:text="Filters"
                            app:cornerRadius="12dp"
                            app:icon="@drawable/ic_chopbox"
                            app:iconGravity="textStart"
                            app:iconPadding="8dp"
                            app:iconSize="24dp"
                            app:strokeColor="#ff00e5ff"
                            style="@style/Widget.Material3.Button.OutlinedButton" />
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnDraw"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:layout_marginStart="4dp"
                            android:text="Draw"
                            app:cornerRadius="12dp"
                            app:icon="@drawable/ic_shred"
                            app:iconGravity="textStart"
                            app:iconPadding="8dp"
                            app:iconSize="24dp"
                            app:strokeColor="#ff00e5ff"
                            style="@style/Widget.Material3.Button.OutlinedButton" />
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp">
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnAddText"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="4dp"
                            android:text="Text"
                            app:cornerRadius="12dp"
                            app:icon="@drawable/ic_text"
                            app:iconGravity="textStart"
                            app:iconPadding="8dp"
                            app:iconSize="24dp"
                            app:strokeColor="#ff00bfa5"
                            style="@style/Widget.Material3.Button.OutlinedButton" />
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnAddSticker"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="4dp"
                            android:text="Sticker"
                            app:cornerRadius="12dp"
                            app:icon="@drawable/ic_add"
                            app:iconGravity="textStart"
                            app:iconPadding="8dp"
                            app:iconSize="24dp"
                            app:strokeColor="#ff00bfa5"
                            style="@style/Widget.Material3.Button.OutlinedButton" />
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnUndo"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:layout_marginStart="4dp"
                            android:text="Undo"
                            app:cornerRadius="12dp"
                            app:icon="@drawable/ic_arrow_back_black_24"
                            app:iconGravity="textStart"
                            app:iconPadding="8dp"
                            app:iconSize="24dp"
                            app:strokeColor="#ff00bfa5"
                            style="@style/Widget.Material3.Button.OutlinedButton" />
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp">
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnRotateLeft"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:contentDescription="Rotate left"
                            android:layout_marginEnd="4dp"
                            app:cornerRadius="12dp"
                            app:icon="@drawable/ic_rotate_left"
                            app:iconGravity="textStart"
                            app:iconPadding="0dp"
                            app:iconSize="28dp"
                            app:strokeColor="#ff00bfa5"
                            style="@style/Widget.Material3.Button.OutlinedButton"/>
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnRotateRight"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:contentDescription="Rotate right"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="4dp"
                            app:cornerRadius="12dp"
                            app:icon="@drawable/ic_rotate_right"
                            app:iconGravity="textStart"
                            app:iconPadding="0dp"
                            app:iconSize="28dp"
                            app:strokeColor="#ff00bfa5"
                            style="@style/Widget.Material3.Button.OutlinedButton"/>
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnFlipHorizontal"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:contentDescription="Flip horizontal"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="4dp"
                            app:cornerRadius="12dp"
                            app:icon="@drawable/ic_flip_horizontal"
                            app:iconGravity="textStart"
                            app:iconPadding="0dp"
                            app:iconSize="28dp"
                            app:strokeColor="#ff00bfa5"
                            style="@style/Widget.Material3.Button.OutlinedButton"/>
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnFlipVertical"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:contentDescription="Flip vertical"
                            android:layout_marginStart="4dp"
                            app:cornerRadius="12dp"
                            app:icon="@drawable/ic_flip_vertical"
                            app:iconGravity="textStart"
                            app:iconPadding="0dp"
                            app:iconSize="28dp"
                            app:strokeColor="#ff00bfa5"
                            style="@style/Widget.Material3.Button.OutlinedButton"/>
                    </LinearLayout>
                    <com.google.android.material.button.MaterialButton
                        android:textColor="#ff00e5ff"
                        android:id="@+id/btnCrop"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="8dp"
                        android:contentDescription="Crop image"
                        app:cornerRadius="12dp"
                        app:icon="@drawable/ic_crop"
                        app:iconGravity="textStart"
                        app:iconPadding="8dp"
                        app:iconSize="28dp"
                        app:strokeColor="#ff00e5ff"
                        style="@style/Widget.Material3.Button.OutlinedButton"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="@color/card_background"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#ff00bfa5"
                        android:id="@+id/tvQuality"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Quality: 90%"/>
                    <SeekBar
                        android:id="@+id/seekBarQuality"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="100"
                        android:progress="90"
                        android:progressTint="#ff00bfa5"
                        android:thumbTint="#ff00bfa5"
                        android:min="10"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSave"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Save"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    app:backgroundTint="@color/accent_teal"
                    app:cornerRadius="12dp"
                    app:icon="@drawable/ic_save"/>
                <com.google.android.material.button.MaterialButton
                    android:textColor="#ff00e5ff"
                    android:id="@+id/btnShare"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Share"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    app:cornerRadius="12dp"
                    app:icon="@drawable/ic_share"
                    app:strokeColor="#ff00e5ff"
                    style="@style/Widget.Material3.Button.OutlinedButton"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCancel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    app:cornerRadius="12dp"
                    app:icon="@drawable/ic_close"
                    app:strokeColor="#ff00bfa5"
                    style="@style/Widget.Material3.Button.OutlinedButton"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
