<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:background="?attr/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="@android:color/white"/>
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">
        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="@color/card_background"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">
                <VideoView
                    android:id="@+id/videoView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </com.google.android.material.card.MaterialCardView>
            <TextView
                android:textSize="12sp"
                android:textColor="#b0b0b0"
                android:layout_gravity="center_horizontal"
                android:id="@+id/tvVideoInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="No video loaded"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSelectVideo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Select Video"
                app:backgroundTint="@color/accent_teal"
                app:cornerRadius="12dp"
                app:icon="@drawable/ic_add"/>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="@color/card_background"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#ff00bfa5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="Playback"/>
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="12sp"
                            android:textColor="#e0e0e0"
                            android:id="@+id/tvCurrentTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00:00"
                            android:fontFamily="monospace"/>
                        <SeekBar
                            android:id="@+id/seekBarProgress"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:progressTint="#ff00bfa5"
                            android:thumbTint="#ff00bfa5"/>
                        <TextView
                            android:textSize="12sp"
                            android:textColor="#e0e0e0"
                            android:id="@+id/tvTotalTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00:00"
                            android:fontFamily="monospace"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnPlayPause"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Play"
                            android:layout_marginEnd="8dp"
                            app:backgroundTint="@color/accent_teal"
                            app:cornerRadius="12dp"
                            app:icon="@drawable/ic_add"/>
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnStop"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Stop"
                            app:cornerRadius="12dp"
                            app:icon="@drawable/ic_close"
                            app:strokeColor="#ff00bfa5"
                            style="@style/Widget.Material3.Button.OutlinedButton"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="@color/card_background"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#ff00bfa5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Playback Speed"/>
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.google.android.material.button.MaterialButton
                            android:textSize="18sp"
                            android:id="@+id/btnSpeedDown"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-"
                            app:cornerRadius="12dp"
                            app:strokeColor="#ff00bfa5"
                            style="@style/Widget.Material3.Button.OutlinedButton"/>
                        <TextView
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#ffffff"
                            android:id="@+id/tvSpeed"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="1.0x"
                            android:textAlignment="center"
                            android:layout_marginHorizontal="16dp"/>
                        <com.google.android.material.button.MaterialButton
                            android:textSize="18sp"
                            android:id="@+id/btnSpeedUp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+"
                            app:cornerRadius="12dp"
                            app:strokeColor="#ff00bfa5"
                            style="@style/Widget.Material3.Button.OutlinedButton"/>
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnSpeedReset"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Reset"
                            android:layout_marginStart="8dp"
                            app:cornerRadius="12dp"
                            style="@style/Widget.Material3.Button.TonalButton"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="@color/card_background"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#ff00bfa5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Trim Video"/>
                    <TextView
                        android:textSize="12sp"
                        android:textColor="#b0b0b0"
                        android:id="@+id/tvTrimInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Trim: 00:00 - 00:00 (Duration: 00:00)"/>
                    <com.google.android.material.slider.RangeSlider
                        android:id="@+id/rangeSliderTrim"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:valueFrom="0"
                        android:valueTo="100"
                        app:thumbColor="@color/accent_teal"
                        app:trackColorActive="@color/accent_teal"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="@color/card_background"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#ff00bfa5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="Crop &amp; Cut"/>
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp">
                        <com.google.android.material.button.MaterialButton
                            android:textColor="#ff00e5ff"
                            android:id="@+id/btnCrop"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Crop"
                            app:cornerRadius="12dp"
                            app:strokeColor="#ff00e5ff"
                            style="@style/Widget.Material3.Button.OutlinedButton"/>
                        <TextView
                            android:textSize="13sp"
                            android:textColor="#b0b0b0"
                            android:id="@+id/tvCropRatio"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Crop: None"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.google.android.material.button.MaterialButton
                            android:textColor="#ffff6b6b"
                            android:id="@+id/btnCut"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cut Here"
                            app:cornerRadius="12dp"
                            app:strokeColor="#ffff6b6b"
                            style="@style/Widget.Material3.Button.OutlinedButton"/>
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnClearCuts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Clear"
                            android:layout_marginStart="8dp"
                            app:cornerRadius="12dp"
                            style="@style/Widget.Material3.Button.TonalButton"/>
                    </LinearLayout>
                    <TextView
                        android:textSize="12sp"
                        android:textColor="#b0b0b0"
                        android:id="@+id/tvCutPoints"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="No cut points"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="@color/card_background"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#ff00bfa5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Output Quality"/>
                    <Spinner
                        android:entries="@array/video_quality_options"
                        android:id="@+id/spinnerQuality"
                        android:background="@color/card_background"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:popupBackground="@color/card_background"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnExtractFrame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Extract Current Frame"
                app:cornerRadius="12dp"
                app:icon="@drawable/ic_settings"
                app:strokeColor="#ff00bfa5"
                style="@style/Widget.Material3.Button.OutlinedButton"/>
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSave"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Export"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:backgroundTint="@color/accent_teal"
                    app:cornerRadius="12dp"
                    app:icon="@drawable/ic_save"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCancel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cornerRadius="12dp"
                    app:icon="@drawable/ic_close"
                    app:strokeColor="#ff00bfa5"
                    style="@style/Widget.Material3.Button.OutlinedButton"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
