<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/notepad_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/notepad_container"
        android:background="@drawable/notepad_border_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/header_bar"
            android:background="@drawable/notepad_header_background"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingHorizontal="8dp">
            <ImageButton
                android:id="@+id/btn_home"
                android:background="@android:color/transparent"
                android:padding="6dp"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_home"
                app:tint="#ff00ffff"
                android:contentDescription="Return to app"/>
            <TextView
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#ff00ffff"
                android:ellipsize="end"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="FaceShot-BuildingBlock"
                android:maxLines="1"
                android:layout_weight="1"
                android:paddingStart="4dp"/>
            <ImageButton
                android:id="@+id/btn_save_note"
                android:background="@android:color/transparent"
                android:padding="6dp"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_save"
                app:tint="#ffffff"
                android:contentDescription="Save note"/>
            <ImageButton
                android:id="@+id/btn_close_notepad"
                android:background="@android:color/transparent"
                android:padding="6dp"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_close"
                app:tint="#ffffff"
                android:contentDescription="Close notepad"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="#cc0d1828"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="12dp"
            android:paddingVertical="4dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_opacity"
                app:tint="#ff00ffff"/>
            <SeekBar
                android:id="@+id/transparency_seekbar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="20"
                android:layout_weight="1"
                android:progressTint="#ff00bfa5"
                android:thumbTint="#ff00bfa5"
                android:layout_marginHorizontal="8dp"/>
            <TextView
                android:textSize="12sp"
                android:textColor="#ffffff"
                android:id="@+id/transparency_label"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="80%"
                android:textAlignment="center"/>
        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="4dp"
            android:layout_weight="1">
            <View
                android:id="@+id/edit_text_background"
                android:background="#0d1828"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.2"/>
            <EditText
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:textColorHint="#80ffffff"
                android:gravity="start|top"
                android:id="@+id/notepad_edit_text"
                android:background="@android:color/transparent"
                android:padding="12dp"
                android:scrollbars="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Start typing..."
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:lineSpacingMultiplier="1.1"
                android:inputType="textMultiLine"
                android:imeOptions="actionNone"/>
        </FrameLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/bottom_bar"
            android:background="@drawable/notepad_header_background"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:paddingHorizontal="4dp">
            <ImageButton
                android:id="@+id/btn_select_note"
                android:background="@android:color/transparent"
                android:padding="8dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_note"
                app:tint="#ff00ffff"
                android:contentDescription="Select saved note"/>
            <ImageButton
                android:id="@+id/btn_new_note"
                android:background="@android:color/transparent"
                android:padding="8dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_add"
                app:tint="#ff00ffff"
                android:contentDescription="New note"/>
            <ImageButton
                android:id="@+id/btn_pin_note"
                android:background="@android:color/transparent"
                android:padding="8dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_pin"
                app:tint="#ffffff"
                android:contentDescription="Pin note"/>
            <ImageButton
                android:id="@+id/btn_share_note"
                android:background="@android:color/transparent"
                android:padding="8dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_share"
                app:tint="#ff00ffff"
                android:contentDescription="Share note"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <ImageButton
                android:id="@+id/btn_delete_note"
                android:background="@android:color/transparent"
                android:padding="8dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_delete"
                app:tint="#ffff6b6b"
                android:contentDescription="Delete note"/>
            <ImageButton
                android:id="@+id/btn_shred_note"
                android:background="@android:color/transparent"
                android:padding="8dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_shred"
                app:tint="#ffff4444"
                android:contentDescription="Shred note securely"/>
            <ImageButton
                android:id="@+id/btn_resize"
                android:background="@android:color/transparent"
                android:padding="8dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_resize"
                app:tint="#80ffffff"
                android:contentDescription="Resize notepad"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/notepad_border"
        android:background="@drawable/notepad_border_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</FrameLayout>
