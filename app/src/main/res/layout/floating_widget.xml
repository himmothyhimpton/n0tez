<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/floating_container"
    android:background="@drawable/floating_widget_background"
    android:padding="8dp"
    android:layout_width="300dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/control_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_transparency"
            android:padding="4dp"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="4dp"
            app:icon="@drawable/ic_opacity"
            app:iconSize="16dp"
            app:iconTint="@android:color/white"
            style="@style/Widget.Material3.Button.TextButton"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_minimize"
            android:padding="4dp"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="4dp"
            app:icon="@drawable/ic_minimize"
            app:iconSize="16dp"
            app:iconTint="@android:color/white"
            style="@style/Widget.Material3.Button.TextButton"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_close"
            android:padding="4dp"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:icon="@drawable/ic_close"
            app:iconSize="16dp"
            app:iconTint="@android:color/white"
            style="@style/Widget.Material3.Button.TextButton"/>
    </LinearLayout>
    <EditText
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/darker_gray"
        android:gravity="start|top"
        android:id="@+id/floating_edit_text"
        android:background="@android:color/transparent"
        android:padding="12dp"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:hint="Start typing your note..."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/control_buttons"/>
</androidx.constraintlayout.widget.ConstraintLayout>
