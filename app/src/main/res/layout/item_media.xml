<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardBackgroundColor="@color/card_background"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/thumbnail"
            android:background="#2a2a40"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="centerCrop"/>
        <ImageView
            android:layout_gravity="end|top"
            android:id="@+id/typeIcon"
            android:background="@drawable/bubble_background"
            android:padding="4dp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="8dp"
            app:tint="#ff00bfa5"/>
        <TextView
            android:textSize="11sp"
            android:textColor="#e0e0e0"
            android:ellipsize="end"
            android:layout_gravity="bottom"
            android:id="@+id/fileName"
            android:background="#cc0f0f1a"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="filename.jpg"
            android:maxLines="1"/>
    </FrameLayout>
</com.google.android.material.card.MaterialCardView>
